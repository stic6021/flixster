<br />
<div class="booyah-box col-10 offset-1">
  <h1><%= @course.title %></h1>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-default">
        <%= number_to_currency(@course.cost) %>
      </span>

      <% if true || current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
        <br />
        <br />
      <% end %>
    </div>
  </div>
  <div class="col-sm-8 col-12">
    <%= @course.description %>
  </div>

  <div class="col-12">
    <% @course.sections.each do |s| %>
      <div class="section">
        <%= s.title %>
        <% s.lessons.each do |l| %>
          <div class="lesson">
            <%= link_to lesson_path(l) do %>
              <b><%= l.title %></b>
              -
              <%= l.subtitle %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>