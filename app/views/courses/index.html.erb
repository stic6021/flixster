<br />
<div class="booyah-box col-10 offset-1">
  <h2 class="text-center">Advance your skill level</h2>
  <br />
  <div class="row">
    <% @courses.each do |c| %>
      <div class="booyah-box col-10 offset-1">
        <div class="row">
          <h4 class="col-10">
            <%= link_to c.title, course_path(c) %>
          </h4  >
        </div>
        <br />
        <div class="col-sm-8 col-12">
          <%= c.description %>
        </div>
        <br />
        <div class="text-right right-offset-1">
          <%= link_to 'Details', course_path(c), class: 'btn btn-primary btn-large' %>
        </div>
        <br class="clr" />
      </div>
    <% end %>
  </div>
</div>
