<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <%= link_to 'Preview as student', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br class="clr" />
  <div class="text-center">
    <%= link_to 'Add a section', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>

  <ul>
    <% current_course.sections.each do |s| %>
      <li>
        <%= s.title %>
        <%= link_to 'New lesson', new_instructor_section_lesson_path(s), class: 'float-right btn btn-primary btn-sm' %>
        <ul>
          <% s.lessons.each do |l| %>
            <li>
              <b><%= l.title %></b>
              -
              <%= l.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
</div>