<br />
<div class="booyah-box col-10 offset-1">
  <h2 class="text-center">Advance your skill level</h2>
  <br />
  <div class="row">
    <% @courses.each do |c| %>
      <div class="booyah-box col-10 offset-1">
        <div class="row">
          <h5 class="col-10">
            <%= link_to c.title, course_path(c) %>
          </h5  >
        </div>

        <% if c.image && c.image.file %>
          <%= image_tag(c.image.url, class: 'img-fluid') %>
        <% end %>

        <div class="col-sm-8 col-12">
          <%= c.description %>
        </div>
        <br />
        <div class="text-right right-offset-1">
          <%= link_to 'Details', course_path(c), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
